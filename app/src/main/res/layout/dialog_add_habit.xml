<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddHabitActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/addHabitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Habit"
        android:textColor="@color/color_text_primary"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/etHabitName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Habit Name Input -->
    <EditText
        android:id="@+id/etHabitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/habit_name"
        android:textColor="@color/color_text_primary"
        android:backgroundTint="@color/color_primary"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/etHabitDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Habit Description Input -->
    <EditText
        android:id="@+id/etHabitDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="@string/habit_description"
        android:textColor="@color/color_text_primary"
        android:backgroundTint="@color/color_primary"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/etHabitName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
