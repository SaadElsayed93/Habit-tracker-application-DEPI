<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/habitCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="8dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editHabitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:tint="@color/color_text_primary" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_ic"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/habitNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habit Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/habitDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A short description about this habit."
            android:textSize="14sp"
            android:textColor="@color/color_text_secondary"
            android:layout_marginTop="8dp"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/habitCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/color_text_primary"
            android:layout_marginTop="12dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ProgressBar
                android:id="@+id/habitProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/color_success"
                android:backgroundTint="@color/color_primary" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0/30"
                android:textSize="14sp"
                android:textColor="@color/color_text_secondary" />
        </LinearLayout>

        <Button
            android:backgroundTint="@color/color_primary"
            android:id="@+id/increaseProgressButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:textColor="@color/button_text_color"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
